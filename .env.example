# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=disaster_data
DB_USER=disaster_user
DB_PASSWORD=disaster_pass

# Geocoding Configuration
GEOCODING_USER_AGENT=disaster_agent_v1
GEOCODING_TIMEOUT=10

# Agent Configuration
USGS_BASE_URL=https://earthquake.usgs.gov/fdsnws/event/1
USGS_START_DATE=2010-01-01
NOAA_FTP_BASE=https://www.ncdc.noaa.gov/stormevents/ftp.jsp

# HDX Configuration
HDX_SITE=prod

# Web Agent Configuration (Google ADK + AI Crawling)
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=
GOOGLE_GEMINI_MODEL=gemini-2.0-flash-exp
WEB_AGENT_MAX_URLS=5
WEB_AGENT_USE_MOCK=false
WEB_AGENT_TIMEOUT=120
WEB_AGENT_LLM_TIMEOUT=1200
WEB_SEARCH_ENGINE=duckduckgo
WEB_MIN_RELEVANCE_SCORE=2
WEB_ENABLE_LLM_CLUSTERING=true
USE_LITELLM_PROXY=false
LITELLM_PROXY_API_KEY=changeme-litellm
LITELLM_PROXY_API_BASE=http://host.docker.internal:4000
LITELLM_PROXY_MODEL=gpt-oss:20b

# Data Processing
BATCH_SIZE=1000
MAX_WORKERS=4

# Dashboard Configuration
DASH_HOST=0.0.0.0
DASH_PORT=8050
DASH_DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/disaster_agent.log
